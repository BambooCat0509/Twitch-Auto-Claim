{
  "manifest_version": 3,
  "name": "Twitch 忠誠點數自動領取",
  "version": "1.0",
  "description": "自動領取 Twitch 上的忠誠點數並記錄日誌",
  "permissions": ["scripting", "storage", "downloads"],
  "host_permissions": ["https://www.twitch.tv/*"],
  "background": {
	"service_worker": "background.js"
  },
  "content_scripts": [
	{
	  "matches": ["https://www.twitch.tv/*"],
	  "js": ["content.js"]
	}
  ]
}